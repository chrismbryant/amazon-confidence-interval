{
  "name": "Confidence Intervals for Amazon",
  "version": "0.0",
  "description": "Adds confidence intervals to Amazon ratings.",
  "permissions": [
    "activeTab",
    "*://*.amazon.com/s?*",
    "*://*.amazon.ca/s?*",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/s?*", "*://*.amazon.ca/s?*"],
      "js": ["shared/confidence_interval.js"]
    }
  ],
  "page_action": {
    "default_title": "Amazon Confidence Intervals",
    "default_icon": {
      "16": "images/icon_inactive.png"
    }
  },
  "manifest_version": 2
}
