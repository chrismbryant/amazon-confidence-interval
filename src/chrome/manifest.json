{
  "name": "Confidence Intervals for Amazon",
  "version": "0.0",
  "description": "Adds confidence intervals to Amazon ratings.",
  "permissions": [
    "activeTab",
    "*://*.amazon.com/s?*",
    "*://*.amazon.ca/s?*",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/s?*", "*://*.amazon.ca/s?*"],
      "js": ["shared/confidence_interval.js"]
    }
  ],
  "page_action": {
    "default_title": "Amazon Confidence Intervals",
    "default_icon": {
      "16": "shared/images/icon16.png",
      "32": "shared/images/icon32.png",
      "38": "shared/images/icon38.png",
      "48": "shared/images/icon48.png",
      "128": "shared/images/icon128.png"
    }
  },
  "manifest_version": 2
}
