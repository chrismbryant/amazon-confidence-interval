{
  "name": "Confidence Intervals for Amazon",
  "version": "0.0",
  "description": "Adds confidence intervals to Amazon ratings.",
  "permissions": [
    "activeTab",
    "*://*.amazon.com/s?*",
    "*://*.amazon.ca/s?*",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_title": "Amazon Confidence Intervals",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "38": "images/icon38.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "manifest_version": 2
}
